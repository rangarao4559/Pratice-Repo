<apex:page controller="personexample" >
      <apex:form >
    <apex:sectionHeader title="person" subtitle="info" help="/apex/page"/>     
      <apex:pageblock title="person">
          <apex:pageBlockSection title="personinfo" columns="1">
<apex:pageBlocksectionItem >
    <apex:outputlabel value="enter industry"/>
               <apex:inputText value="{!industry}"/>
                  </apex:pageBlocksectionItem>    
        </apex:pageBlockSection>
           <apex:pageBlockSection title="accountinfo" columns="1">
               <apex:inputText value="{!person.acc.name}"/>           
               <apex:inputText value="{!person.acc.type}"/>
               <apex:inputText value="{!person.acc.phone}"/>
<apex:pageBlockSectionItem >
    <apex:outputlabel value="enter name"/>
               <apex:inputText value="{!person.name}"/>               
               </apex:pageBlockSectionItem>
                 <apex:pageBlockSectionItem >
    <apex:outputlabel value="enter age"/>
               <apex:inputText value="{!person.age}"/>               
               </apex:pageBlockSectionItem>
                 
        </apex:pageBlockSection>
          </apex:pageblock>
    
    </apex:form>
</apex:page>